<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
	<persistence-unit name="test" transaction-type="RESOURCE_LOCAL">
		<class>br.com.gft.MentorsCommon.CostCenter</class>
		<class>br.com.gft.MentorsCommon.Customer</class>
		<class>br.com.gft.MentorsCommon.Employee</class>
		<class>br.com.gft.MentorsCommon.EmployeeAssignment</class>
		<class>br.com.gft.MentorsCommon.MentorHistory</class>
		<class>br.com.gft.MentorsCommon.Project</class>
		<class>br.com.gft.MentorsCommon.RatePrf</class>
		<class>br.com.gft.MentorsCommon.Unit</class>
		<class>br.com.gft.MentorsCommon.Job</class>
		<class>br.com.gft.MentorsCommon.Users</class>
		<class>br.com.gft.MentorsCommon.UserRole</class>
		
		<exclude-unlisted-classes>false</exclude-unlisted-classes>

		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
			<property name="javax.persistence.jdbc.url"
				value="jdbc:postgresql://localhost:5432/WorkspaceControl" />
			<property name="javax.persistence.jdbc.user" value="postgres" />
			<property name="javax.persistence.jdbc.password" value="GLHU" />
			<property name="eclipselink.ddl-generation" value="create-tables" />
			<property name="eclipselink.ddl-generation.output-mode"
				value="WorkspaceControl"/>
		</properties>
	</persistence-unit>
</persistence>